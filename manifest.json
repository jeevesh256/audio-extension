{
  "manifest_version": 2,
  "name": "Tab Audio Recorder",
  "version": "1.0",
  "description": "Record audio from browser tabs during virtual meetings",
  "permissions": [
    "tabCapture",
    "downloads",
    "storage",
    "tabs",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  },
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
